{
  "version": 1,
  "hooks": {
    "sessionStart": [
      {
        "command": "hooks/session-start.sh"
      }
    ],
    "sessionEnd": [
      {
        "command": "hooks/session-end.sh"
      }
    ],
    "stop": [
      {
        "command": "hooks/session-end.sh"
      }
    ],
    "preToolUse": [
      {
        "command": "hooks/preToolUse.sh"
      }
    ],
    "postToolUse": [
      {
        "command": "hooks/audit-tool.sh"
      }
    ],
    "postToolUseFailure": [
      {
        "command": "hooks/postToolUseFailure.sh"
      }
    ],
    "subagentStart": [
      {
        "command": "hooks/subagent-start.sh"
      }
    ],
    "subagentStop": [
      {
        "command": "hooks/subagent-stop.sh"
      }
    ],
    "beforeShellExecution": [
      {
        "command": "hooks/audit-shell.sh",
        "matcher": "rm -rf|del -rf|:(){ :|:& };:|shutdown|reboot"
      }
    ],
    "afterShellExecution": [
      {
        "command": "hooks/audit-shell-log.sh"
      }
    ],
    "beforeMCPExecution": [
      {
        "command": "hooks/beforeMCPExecution.sh"
      }
    ],
    "afterMCPExecution": [
      {
        "command": "hooks/afterMCPExecution.sh"
      }
    ],
    "beforeReadFile": [
      {
        "command": "hooks/beforeReadFile.sh"
      }
    ],
    "afterFileEdit": [
      {
        "command": "hooks/afterFileEdit.sh"
      }
    ],
    "beforeSubmitPrompt": [
      {
        "command": "hooks/beforeSubmitPrompt.sh"
      }
    ],
    "preCompact": [
      {
        "command": "hooks/preCompact.sh"
      }
    ],
    "afterAgentResponse": [
      {
        "command": "hooks/afterAgentResponse.sh"
      }
    ],
    "afterAgentThought": [
      {
        "command": "hooks/afterAgentThought.sh"
      }
    ]
  }
}
